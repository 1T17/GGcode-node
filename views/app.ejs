    localStorage.removeItem('ggcode_output_content');
    localStorage.removeItem('ggcode_last_filename');
    localStorage.removeItem('ggcode_auto_compile');
    
    // Reset variables
    lastOpenedFilename = '';
    autoCompile = false;
    
    // Reset UI
