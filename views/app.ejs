// Motion group detector (expand if you need more)
function isMotionCmd(cmd) {
  // G0/G1/G2/G3 + common probing/canned cycles + G80 (cancel)
  return /^G(?:0|1|2|3|33|38\.2|38\.3|38\.4|38\.5|80|81|82|83|85|86|89)$/i.test(cmd);
}

// Does the line carry motion-relevant coordinates?
function hasMotionCoords(params) {
  // Common motion letters; skip N/F/S/T, etc.
  for (const k of Object.keys(params)) {
    if (/[XYZIJKRABCUVW]/.test(k)) return true;
  }
  return false;
}

// Get all G-code lines (works with Monaco or plain DOM)
function getAllGcodeLines() {
  if (window.outputEditor && typeof outputEditor.getValue === 'function') {
    return outputEditor.getValue().split(/\r?\n/);
  }
  const out = document.getElementById('output');
  return out ? out.textContent.split(/\r?\n/) : [];
}

// Find last motion G before a given 1-based lineNumber
function findPreviousMotion(lineNumber) {
  const lines = getAllGcodeLines();
  const targetIdx = Math.max(0, (lineNumber | 0) - 2); // 0-based, start just above
  for (let i = targetIdx; i >= 0; i--) {
    const p = parseGcodeLine(lines[i]);
    if (!p || !p.commands || !p.commands.length) continue;
    const motions = p.commands.filter(isMotionCmd);
    if (motions.length) {
      return { cmd: motions[motions.length - 1], line: i + 1 };
    }
  }
  return { cmd: null, line: null }; // no prior motion found
}












